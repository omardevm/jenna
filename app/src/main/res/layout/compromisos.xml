    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/out_message"
            android:contentDescription="@string/globalimagen"/>

        <TextView
            android:textSize="22sp"
            android:text="Capitulo 2"
            android:id="@+id/capitulo"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:textSize="16sp"
            android:textAlignment="center"
            android:id="@+id/titleCapitulo"
            android:fontFamily="@font/lato"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/capitulo"
            android:text="Desarrollo de habilidades de pensamiento"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/recycler_manualCapitulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/card_capitulos"/>


</LinearLayout>