<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/dim_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACADÉMICA"
        android:textAlignment="center"
        android:textColor="@color/gradient1"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/general_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- factor_1-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/fact_1_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/offline_light" />

                    <TextView
                        android:id="@+id/fac_1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orientación\nVocacional"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!-- factor_2-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/fac_2_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/offline_light" />

                    <TextView
                        android:id="@+id/fac_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orientación\nVocacional"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--factor_3-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/fac_3_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/offline_light" />

                    <TextView
                        android:id="@+id/fac_3_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orientación\nVocacional"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>