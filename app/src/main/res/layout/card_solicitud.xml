<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_solicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoSolicitud"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/nombreSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jennyfer Gutierrez Hernandez"
                    android:textSize="17sp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="#000000"
                    android:paddingStart="15dp"/>

                <TextView
                    android:id="@+id/carreraSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:text="IngenierÃ­a Sistemas Computacionales"
                    android:textColor="#5C5C5C"
                    android:fontFamily="@font/lato"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/aceptarSolicitud"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/lato_bold"
                        android:background="@drawable/boton_verde"
                        android:textColorHint="@color/white"
                        android:hint="Aceptar"/>

                    <Button
                        android:id="@+id/eliminarSolicitud"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:fontFamily="@font/lato_bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/boton_gris"
                        android:textColorHint="@color/white"
                        android:hint="Cancelar"/>
                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>