<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pantone7420</item>
        <item name="colorPrimaryDark">@color/pantone7421</item>
        <item name="colorAccent">@color/pantone468</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationView" >
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="Toolbar" >
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#009688</item>
        <item name="android:colorForegroundInverse">#B2DFDB</item>
        <item name="colorSwitchThumbNormal">@color/pantone7421</item>
        <item name="android:colorForeground">@color/pantone7421A</item>
    </style>

    <style name="button_quizz_start">
        <item name="android:layout_width">350dp</item>

        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_centerHorizontal">true</item>

        <item name="android:layout_centerVertical">true</item>

        <item name="android:background">@drawable/bg_w</item>

</style>


</resources>
